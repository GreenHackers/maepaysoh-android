<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:layout_width="match_parent"
        style="@style/TextAppearance.AppCompat.Headline"
        android:padding="@dimen/spacing_minor"
        android:layout_height="wrap_content"
        android:text="@string/gender"/>
    <RadioGroup
        android:id="@+id/gender_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_minor"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatRadioButton
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_all_rb"
            android:text="All"/>
        <android.support.v7.widget.AppCompatRadioButton
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_male_rb"
            android:text="Male"/>
        <android.support.v7.widget.AppCompatRadioButton
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_female_rb"
            android:text="Female"/>
    </RadioGroup>

    <TextView
        android:id="@+id/religion_radio_group"
        android:layout_width="match_parent"
        style="@style/TextAppearance.AppCompat.Headline"
        android:padding="@dimen/spacing_minor"
        android:layout_height="wrap_content"
        android:text="@string/CandidateReligion"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_minor"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatRadioButton
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/religion_all_rb"
            android:text="All"/>
        <android.support.v7.widget.AppCompatRadioButton
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/religion_buddhism_rb"
            android:text="Buddhism"/>
        <android.support.v7.widget.AppCompatRadioButton
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_christian_rb"
            android:text="Christian"/>
        <android.support.v7.widget.AppCompatRadioButton
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender_Islam_rb"
            android:text="Islam"/>
    </RadioGroup>
</LinearLayout>