<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

      <include
          layout="@layout/include_toolbar"
          android:id="@+id/location_detail_toolbar"
          />
      <FrameLayout

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/location_detail_map"
            tools:context="org.maepaysoh.maepaysoh.ui.LocationDetailActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_weight="1"/>
    <TextView
        android:id="@+id/valid_candidates"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_major"
        android:text="Valid Candidates"
        android:visibility="gone"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/candidate_list_progress_bar"
                style="?android:progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/candidate_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <include
                layout="@layout/include_error_view"
                android:visibility="gone"
                android:id="@+id/candidate_list_error_view"
                />

        </FrameLayout>
        </LinearLayout>
        <include
            layout="@layout/include_toolbar_shadow"
            android:id="@+id/location_detail_toolbar_shadow"
            />
      </FrameLayout>
    </LinearLayout>