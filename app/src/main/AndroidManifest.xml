<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.maepaysoh.maepaysoh"
    >

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

  <!--
The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
       Google Maps Android API v2, but are recommended.
  -->
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name=".ui.HomeActivity"
        android:label="@string/app_name"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".ui.PartyListActivity"
        android:label="@string/PartyList"
        >
    </activity>
    <activity
        android:name=".ui.PartyDetailActivity"
        android:label="@string/PartyDetailTitle"
        >
    </activity>
    <activity
        android:name=".ui.CandidateListActivity"
        android:label="@string/CandidateList"
        >
    </activity>
    <activity
        android:name=".ui.CandidateDetailActivity"
        android:label="@string/CandidateDetailTitle"
        >
    </activity>
    <activity
        android:name=".ui.FaqListActivity"
        android:label="@string/FaqList"
        >
    </activity>
    <activity
        android:name=".ui.FaqDetailActivity"
        android:label="@string/FaqList"
        >
    </activity>

    <activity
        android:name=".ui.LocationListActivity"
        android:label="@string/LocationList"
        >
    </activity>

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version"
        />
    <meta-data
        android:name="com.google.android.maps.v2.API_KEY"
        android:value="@string/google_maps_key"
        />
  </application>

</manifest>
