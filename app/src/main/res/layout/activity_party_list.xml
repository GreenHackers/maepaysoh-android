<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.maepaysoh.maepaysoh.ui.PartyListActivity"
    >

  <include
      layout="@layout/include_toolbar"
      android:id="@+id/party_list_toolbar"
      />

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/party_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <!-- Toolbar Shadow -->
    <include
        layout="@layout/include_toolbar_shadow"
        android:id="@+id/party_list_toolbar_shadow"
        />

  </FrameLayout>

</LinearLayout>
